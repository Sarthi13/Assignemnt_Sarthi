<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/off_white"
    android:layout_margin="@dimen/_8sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batting Detail!"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black_color"
            android:layout_gravity="center"
            android:fontFamily="@font/monstreat_bold"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Style"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12sdp">


            </TextView>

            <TextView
                android:id="@+id/text_bat_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pdlg_gray"
            android:layout_marginTop="@dimen/_5sdp"
            >

        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Average">


            </TextView>

            <TextView
                android:id="@+id/text_bat_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pdlg_gray"
            android:layout_marginTop="@dimen/_5sdp"
            >

        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Strike Rate"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12sdp">


            </TextView>

            <TextView
                android:id="@+id/text_bat_strikerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Runs"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12sdp">


            </TextView>

            <TextView
                android:id="@+id/text_bat_runs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pdlg_gray"
            android:layout_marginTop="@dimen/_5sdp"
            >

        </View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bowling Detail!"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black_color"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/monstreat_bold"></TextView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Style">


            </TextView>

            <TextView
                android:id="@+id/text_bowl_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pdlg_gray"
            android:layout_marginTop="@dimen/_5sdp"
            >

        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Average"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12sdp">


            </TextView>

            <TextView
                android:id="@+id/text_bowl_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pdlg_gray"
            android:layout_marginTop="@dimen/_10sdp"
            >

        </View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Economy Rate"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12sdp">


            </TextView>

            <TextView
                android:id="@+id/text_economy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pdlg_gray"
            android:layout_marginTop="@dimen/_10sdp"
            >

        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/monstreat_semibold"
                android:text="Wickets"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12sdp">


            </TextView>

            <TextView
                android:id="@+id/text_wickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black_color"
                android:fontFamily="@font/monstreat_semibold"
                >


            </TextView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/pdlg_gray"
            android:layout_marginTop="@dimen/_10sdp"
            >

        </View>







    </LinearLayout>


</androidx.cardview.widget.CardView>